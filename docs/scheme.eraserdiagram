        RP [label: "Reverse Proxy", icon: shield]
      }
  
      AWS LAN Network [label: "AWS LAN Network"] {
        K8s Block [label: "K8s"] {
          K8s VM 1 [label: "K8s VM 1"] {
            K8s VM 1 CPU [label: "CPU Usage", icon: cpu]
            K8s VM 1 RAM [label: "RAM Usage", icon: server]
            K8s VM 1 Disk [label: "Disk Usage", icon: hard-drive]
            K8s VM 1 Network [label: "Network Bandwidth/Latency", icon: activity]
          }
        }
  
        Monitoring [label: "Monitoring"] {
          Mon VM 1 [label: "Mon VM 1"] {
            Dashboard [icon: layout]
            Backend [icon: server]
          }
        }
  
