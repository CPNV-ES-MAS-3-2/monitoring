          DWH VM 1 [label: "DWH VM 1"] {
            DWH VM 1 CPU [label: "CPU Usage", icon: cpu]
            DWH VM 1 RAM [label: "RAM Usage", icon: server]
            DWH VM 1 Disk [label: "Disk Usage", icon: hard-drive]
            DWH VM 1 Network [label: "Network Bandwidth/Latency", icon: activity]
            DWH VM 1 Database [label: "Database state", icon: database]
          }
        }
      }
    }
  }
  
  // Connections
  RP <-- Dashboard: "HTTP/HTTPS"
  Dashboard <> Backend
  Backend <-- DWH VM 1: "Metrics/Logs"
  Backend <-- K8s VM 1: "Metrics/Logs"
  Backend <-- Cloudwatch: API Scrape Hypervisor Metrics